<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="mo.model">

    <class name="Comanda" table="Comanda">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="data" column="data"/>
        <property name="livrata" column="livrata"/>
        <property name="oras" column="oras"/>
        <property name="judet" column="judet"/>
        <property name="strada" column="strada"/>
        <property name="codPostal" column="codPostal"/>
        <set name="produse" table="ComenziProduse" cascade="save-update" lazy="false">
            <key column="com_id" not-null="true"/>
            <many-to-many entity-name="mo.model.Produs">
                <column name="produs_id" not-null="true"/>
            </many-to-many>
        </set>
        <many-to-one name="client" class="mo.model.Client" fetch="select" lazy="false">
            <column name="client_id" not-null="true"/>
        </many-to-one>

    </class>

</hibernate-mapping>


