<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="mo.model">

    <class name="Client" table="Client">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="numeUtilizator" column="nume_utilizator"/>
        <property name="parola" column="parola"/>
        <property name="numeComplet" column="nume_complet"/>
        <set name="cosCumparaturi" table="ClientProdus" cascade="save-update" lazy="false">
            <key column="client_id" not-null="true"/>
            <many-to-many entity-name="mo.model.Produs">
                <column name="produs_id" not-null="true"/>
            </many-to-many>
        </set>
        <set name="comenzi" table="Comanda" inverse="true" cascade="save-update" lazy="false" fetch="select">
            <key column="id" not-null="true"/>
            <one-to-many class="mo.model.Comanda"/>
        </set>
    </class>

</hibernate-mapping>


